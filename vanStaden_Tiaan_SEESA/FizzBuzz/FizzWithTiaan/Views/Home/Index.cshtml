@{
    ViewData["Title"] = "Fanta Recipe";

    string printForLoop()
    {
        string printValue = "";

        for (int i = 1; i <= 100; i++)
        {
            printValue += (i % 3 == 0 && i % 5 == 0) ? " FizzBuzz " : (i % 3 == 0) ? " Fizz " : (i % 5 == 0) ? $" {i} : Buzz " : $" {i} ";
        }

        return printValue;
    }
}

<div class="text-center">
    <h1 class="display-4">It's FizzBuzz Time</h1>
    <br />
    <br />
    <div>
        @printForLoop();
    </div>
</div>
